generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(uuid())
  name        String
  price       Decimal
  createdAt   DateTime    @default(now())
  // ✨ NOVO: Adicionamos uma relação para saber em quais itens de pedido este produto aparece.
  orderItems  OrderItem[]
}

// ==================================================================
// ✨ NOSSO NOVO MODELO DE PEDIDOS (ORDERS)
// ==================================================================
model Order {
  id        String      @id @default(uuid())
  total     Decimal     // O valor total do pedido.
  createdAt DateTime    @default(now())
  // Relação: Um pedido tem muitos itens de pedido.
  items     OrderItem[]
}

// ==================================================================
// ✨ NOSSO NOVO MODELO DE ITENS DO PEDIDO (ORDER ITEMS)
// ==================================================================
model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int     // A quantidade deste item no pedido.

  // Relação com o Pedido: a qual pedido este item pertence?
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])

  // Relação com o Produto: qual produto é este item?
  productId String
  product   Product @relation(fields: [productId], references: [id])
}